{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
